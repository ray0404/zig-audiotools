{
  "name": "sonic-forge",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "copy-docs": "rm -rf public/docs && cp -r docs public/",
    "dev": "npm run copy-docs && vite",
    "build": "npm run copy-docs && tsc && vite build",
    "build:wasm": "zig build-exe packages/sonic-core/src/dsp/zig/main.zig -target wasm32-freestanding -rdynamic -fno-entry -O ReleaseFast -femit-bin=public/wasm/dsp.wasm",
    "build:cli": "npm run build && tsc -p tsconfig.cli.json && cp dist/headless.html dist/cli/headless.html",
    "dev:cli": "tsx cli/index.ts start",
    "preview:cli": "npm run build:cli && node dist/cli/index.js start",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/file-saver": "^2.0.7",
    "@types/jszip": "^3.4.0",
    "clsx": "^2.1.0",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.23.26",
    "idb-keyval": "^6.2.1",
    "ink": "^5.2.1",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "jszip": "^3.10.1",
    "jzip": "^1.0.0",
    "lamejs": "^1.2.1",
    "lucide-react": "^0.344.0",
    "puppeteer-core": "^24.35.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-knob-headless": "^0.4.0",
    "react-markdown": "^10.1.0",
    "standardized-audio-context": "^25.3.77",
    "tailwind-merge": "^2.2.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "eruda": "^3.4.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vite-plugin-pwa": "^0.19.0",
    "vitest": "^4.0.15"
  }
}
